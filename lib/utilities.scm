(define (symbol->keyword s)
  (string->keyword (symbol->string s)))

(define (replace l o n)
  (cond
   ((null? l) (list))
   ((equal? o (car l)) (cons n (replace (cdr l) o n)))
   (#t (cons (car l) (replace (cdr l) o n)))))

(define (replace! l o n)
  (if (member o l) (replace l o n)
      (cons n l)))
